<h1><%= @article.title %></h1>
<div>
  <p><%= @article.body %></p>
  <small><%= @article.created_at.to_fs(:short) %></small>
</div>

<h2> Comments </h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %> 

<%= link_to "Edit", edit_article_path %>
<%= link_to "Back", articles_path %>
<%= link_to "Delete", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>